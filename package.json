{
	"name": "caf-planning",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"deploy": "npm run build && gsutil -m cp -R build/* gs://caf-planning-staticfiles",
		"psql": "PGPASSWORD=postgres psql -U bcoste --host 127.0.0.1 --port 5432 -d caf",
		"prisma:migrate:dev": "DATABASE_URL=\"postgresql://bcoste:postgres@127.0.0.1:5432/caf\" npx prisma migrate dev",
		"prisma:migrate:baseline:create": "DATABASE_URL=\"postgresql://bcoste:postgres@127.0.0.1:5432/caf\" npx prisma migrate dev --create-only --name init_baseline",
		"db:pgdump:dev": "PGPASSWORD=postgres pg_dump -U bcoste --host 127.0.0.1 --port 5432 -d caf -f sql/init.sql",
		"db:reset": "DATABASE_URL=\"postgresql://bcoste:postgres@127.0.0.1:5432/caf\" npx prisma migrate reset",
		"db:seed": "DATABASE_URL=\"postgresql://bcoste:postgres@127.0.0.1:5432/caf\" npx prisma db seed",
		"db:regenerate": "npm run db:reset -- -f && npm run db:seed && npm run db:pgdump:dev"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.7.5",
		"@iconify/svelte": "^3.1.6",
		"@playwright/test": "^1.58.1",
		"@skeletonlabs/skeleton": "^4.11.0",
		"@skeletonlabs/skeleton-svelte": "^4.11.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^2.1.2",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@types/google.maps": "^3.58.1",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"dotenv": "^16.6.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.2",
		"eslint-plugin-svelte": "^2.46.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.5",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^5.4.21",
		"vitest": "^1.6.1",
		"zod": "^4.3.6"
	},
	"type": "module",
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"@prisma/client": "^6.19.2",
		"@tailwindcss/vite": "^4.1.18",
		"luxon": "^3.7.2",
		"prisma": "^6.19.2",
		"sveltekit-superforms": "^2.29.1",
		"tailwindcss": "^4.1.18"
	}
}