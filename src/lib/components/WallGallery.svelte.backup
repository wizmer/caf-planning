<script lang="ts">
	import type { Move } from '$lib/types';
	import type { Wall } from '@prisma/client';

	let {
		showLegend = true,
		walls,
		id,
		route = $bindable([]) as Move[],
		isEditing = false
	} = $props();

	let currentWallIndex = $state(0);

	function nextWall() {
		currentWallIndex = (currentWallIndex + 1) % walls.length;
	}

	function prevWall() {
		currentWallIndex = currentWallIndex === 0 ? walls.length - 1 : currentWallIndex - 1;
	}

	function goToWall(index: number) {
		currentWallIndex = index;
	}

	let currentWall = $derived(walls.find((wall: Wall) => wall.id === currentWallIndex) ?? walls[0]);
	let currentWallMoves = $derived(route.filter((move) => move.wallId === currentWall?.id));
	let editingMoveId = $state<string | null>(null);
	let selectedMoveForEdit = $state<Move | null>(null);

	function getMoveRgbColor(type: string) {
		switch (type) {
			case 'hand_start':
				return 'bg-green-500';
			case 'foot_start':
				return 'bg-teal-500';
			case 'hand':
				return 'bg-blue-500';
			case 'foot':
				return 'bg-yellow-500';
			case 'both':
				return 'bg-purple-500';
			case 'finish':
				return 'bg-red-500';
			default:
				return 'bg-gray-500';
		}
	}

	function getMoveLabel(type: string) {
		switch (type) {
			case 'hand_start':
				return 'HS';
			case 'foot_start':
				return 'FS';
			case 'hand':
				return 'H';
			case 'foot':
				return 'F';
			case 'both':
				return 'B';
			case 'finish':
				return 'FIN';
			default:
				return '?';
		}
	}

	let currentMoveType = $state<Move['type']>('hand');

	function handleImageClick(event: MouseEvent) {
		if (!isEditing) return;

		const img = event.currentTarget as HTMLElement;
		const rect = img.getBoundingClientRect();
		const x = ((event.clientX - rect.left) / rect.width) * 100;
		const y = ((event.clientY - rect.top) / rect.height) * 100;

		// Get the next index for this wall
		const maxIndex = currentWallMoves.reduce((max, move) => Math.max(max, move.index || 0), 0);

		// Create new move
		const newMove: Move = {
			id: crypto.randomUUID(),
			wallId: currentWall.id,
			type: currentMoveType,
			x: Number(x.toFixed(2)),
			y:h4 class="h4 mb-3">Add Holds</h4>
				<p class="text-sm text-surface-600 mb-3">Select hold type and click on the wall to add</p>
				<div class="flex flex-wrap gap-2">
					<button
						onclick={() => (currentMoveType = 'hand_start')}
						class="btn {currentMoveType === 'hand_start' ? 'variant-filled-success' : 'variant-soft-success'}"
					>
						Hand Start
					</button>
					<button
						onclick={() => (currentMoveType = 'foot_start')}
						class="btn {currentMoveType === 'foot_start' ? 'variant-filled-tertiary' : 'variant-soft-tertiary'}"
					>
						Foot Start
					</button>
					<button
						onclick={() => (currentMoveType = 'hand')}
						class="btn {currentMoveType === 'hand' ? 'variant-filled-primary' : 'variant-soft-primary'}"
					>
						Hand
					</button>
					<button
						onclick={() => (currentMoveType = 'foot')}
						class="btn {currentMoveType === 'foot' ? 'variant-filled-warning' : 'variant-soft-warning'}"
					>
						Foot
					</button>
					<button
						onclick={() => (currentMoveType = 'both')}
						class="btn {currentMoveType === 'both' ? 'variant-filled-secondary' : 'variant-soft-secondary'}"
					>
						Both
					</button>
					<button
						onclick={() => (currentMoveType = 'finish')}
						class="btn {currentMoveType === 'finish' ? 'variant-filled-error' : 'variant-soft-error'}"
					>
						Finish
					</button>
				</div>
				<p class="text-xs text-surface-500 mt-2">
					Current wall has {currentWallMoves.length} hold{currentWallMoves.length !== 1 ? 's' : ''}
				</p>
			</div>
		{/if}
		route = [...route, newMove];
	}

	function handleMoveClick(event: MouseEvent, move: Move) {
		if (!isEditing) return;
		event.stopPropagation();
		selectedMoveForEdit = move;
	}

	function updateMoveType(move: Move, newType: Move['type']) {
		route = route.map((m) => (m.id === move.id ? { ...m, type: newType } : m));
		selectedMoveForEdit = null;
	}

	function deleteMove(moveId: string) {
		route = route.filter((m) => m.id !== moveId);
		selectedMoveForEdit = null;
		// Reindex remaining moves on this wall
		reindexMoves();
	}

	function reindexMoves() {
		const wallMoves = route.filter((m) => m.wallId === currentWall.id).sort((a, b) => a.index - b.index);
		wallMoves.forEach((move, idx) => {
			move.index = idx + 1;
		});
		route = [...route];
	}

	function moveUp(move: Move) {
		const wallMoves = currentWallMoves.sort((a, b) => a.index - b.index);
		const currentIdx = wallMoves.findIndex((m) => m.id === move.id);
		if (currentIdx > 0) {
			// Swap indices
			const prevMove = wallMoves[currentIdx - 1];
			const tempIndex = move.index;
			route = route.map((m) => {
				if (m.id === move.id) return { ...m, index: prevMove.index };
				if (m.id === prevMove.id) return { ...m, index: tempIndex };
				return m;
			});
		}
		selectedMoveForEdit = nu.sort((a, b) => a.index - b.index) as move}
				<button
					class="absolute w-8 h-8 rounded-full border-2 border-surface-50 shadow-lg flex items-center justify-center text-surface-50 text-xs font-bold transform -translate-x-1/2 -translate-y-1/2 {getMoveRgbColor(
						move.type
					)} {isEditing ? 'hover:scale-125 cursor-pointer' : ''} transition-transform"
					style="left: {move.x}%; top: {move.y}%;"
					title="{move.type} - Move {move.index}"
					onclick={(e) => handleMoveClick(e, move)}
				>
					{move.index}
				</button>
			{/each}

			<!-- Edit Move Modal -->
			{#if selectedMoveForEdit && isEditing}
				<div
					class="absolute card p-4 shadow-xl z-50 min-w-64"
					style="left: {selectedMoveForEdit.x}%; top: {selectedMoveForEdit.y}%; transform: translate(-50%, -120%);"
				>
					<div class="flex justify-between items-center mb-3">
						<h5 class="h5">Edit Hold #{selectedMoveForEdit.index}</h5>
						<button onclick={() => (selectedMoveForEdit = null)} class="btn-icon btn-icon-sm">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M6 18L18 6M6 6l12 12"
								/>
							</svg>
						</button>
					</div>

					<div class="flex flex-col gap-2">
						<div class="text-xs text-surface-500 mb-1">Change Type:</div>
						<div class="grid grid-cols-2 gap-1">
							<button
								onclick={() => updateMoveType(selectedMoveForEdit, 'hand_start')}
								class="btn btn-sm variant-soft-success"
							>
								Hand Start
							</button>
							<button
								onclick={() => updateMoveType(selectedMoveForEdit, 'foot_start')}
								class="btn btn-sm variant-soft-tertiary"
							>
								Foot Start
							</button>
							<button
								onclick={() => updateMoveType(selectedMoveForEdit, 'hand')}
								class="btn btn-sm variant-soft-primary"
							>
								Hand
							</button>
							<button
								onclick={() => updateMoveType(selectedMoveForEdit, 'foot')}
								class="btn btn-sm variant-soft-warning"
							>
								Foot
							</button>
							<button
								onclick={() => updateMoveType(selectedMoveForEdit, 'both')}
								class="btn btn-sm variant-soft-secondary"
							>
								Both
							</button>
							<button
								onclick={() => updateMoveType(selectedMoveForEdit, 'finish')}
								class="btn btn-sm variant-soft-error"
							>
								Finish
							</button>
						</div>

						<hr class="my-2" />

						<div class="text-xs text-surface-500 mb-1">Change Order:</div>
						<div class="flex gap-1">
							<button onclick={() => moveUp(selectedMoveForEdit)} class="btn btn-sm variant-filled">
								↑ Move Up
							</button>
							<button onclick={() => moveDown(selectedMoveForEdit)} class="btn btn-sm variant-filled">
								↓ Move Down
							</button>
						</div>

						<hr class="my-2" />

						<button
							onclick={() => deleteMove(selectedMoveForEdit.id)}
							class="btn btn-sm variant-filled-error"
						>
							Delete Hold
						</button>
					</div>
				</div>
			{/if= route.map((m) => {
				if (m.id === move.id) return { ...m, index: nextMove.index };
				if (m.id === nextMove.id) return { ...m, index: tempIndex };
				return m;
			});
		}
		selectedMoveForEdit = null;
	}
</script>

{#if walls.length > 0}
	<div class="relative w-full max-w-4xl mx-auto">
		{#if isEditing}
			<div class="card p-4 mb-4">
				<p class="text-sm text-surface-600 mt-2">Click on the wall image to add moves'</p>
			</div>
		{/if}

		{route.length} the size of route

		<!-- Main ImagshowLegend}
			<div class="card p-4 mt-4">
				<h4 class="h4 mb-2">Hold Legend</h4>
				<div class="flex flex-wrap gap-4 text-sm">
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-green-500 border border-surface-50"></div>
						<span>Hand Start</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-teal-500 border border-surface-50"></div>
						<span>Foot Start</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-blue-500 border border-surface-50"></div>
						<span>Hand</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-yellow-500 border border-surface-50"></div>
						<span>Foot</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-purple-500 border border-surface-50"></div>
						<span>Both</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-red-500 border border-surface-50"></div>
						<span>Finishion Arrows -->
			{#if walls.length > 1}
				<button
					onclick={prevWall}
					class="btn-icon variant-filled-surface absolute left-4 top-1/2 transform -translate-y-1/2"
					aria-label="Previous wall"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M15 19l-7-7 7-7"
						/>
					</svg>
				</button>

				<button
					onclick={nextWall}
					class="btn-icon variant-filled-surface absolute right-4 top-1/2 transform -translate-y-1/2"
					aria-label="Next wall"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M9 5l7 7-7 7"
						/>
					</svg>
				</button>
			{/if}

			{#if !isEditing}
				<!-- Wall Info Overlay -->
				<div
					class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-surface-900/80 to-transparent p-6"
				>
					<h3 class="text-surface-50 text-xl font-bold">{currentWall.name}</h3>
					{#if currentWall.description}
						<p class="text-surface-200 mt-1">{currentWall.description}</p>
					{/if}
					{#if currentWallMoves.length > 0}
						<p class="text-surface-300 text-sm mt-1">
							{currentWallMoves.length} move{currentWallMoves.length !== 1 ? 's' : ''}
						</p>
					{/if}
					{#if isEditing}
						<p class="text-surface-300 text-xs mt-1">
							Editing mode • Click to add {currentMoveType}
						</p>
					{/if}
				</div>
			{/if}

			<!-- Counter -->
			{#if walls.length > 1}
				<div class="badge variant-filled-surface absolute top-4 right-4">
					{currentWallIndex + 1} / {walls.length}
				</div>
			{/if}
		</div>

		<!-- Move Legend -->
		{#if route && !isEditing && showLegend}
			<div class="card p-4 mt-4">
				<h4 class="h4 mb-2">Move Legend</h4>
				<div class="flex flex-wrap gap-4 text-sm">
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-success-500 border border-surface-50"></div>
						<span>Start</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-primary-500 border border-surface-50"></div>
						<span>Handhold</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-warning-500 border border-surface-50"></div>
						<span>Foothold</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-secondary-500 border border-surface-50"></div>
						<span>Both</span>
					</div>
					<div class="flex items-center gap-2">
						<div class="w-4 h-4 rounded-full bg-error-500 border border-surface-50"></div>
						<span>Top</span>
					</div>
				</div>
			</div>
		{/if}

		<!-- Thumbnail Navigation -->
		{#if walls.length > 1}
			<div class="flex justify-center mt-4 space-x-2 overflow-x-auto pb-2">
				{#each walls as wall, index}
					<button
						onclick={() => goToWall(index)}
						class="flex-shrink-0 w-20 h-16 rounded-md overflow-hidden border-2 transition-all {index ===
						currentWallIndex
							? 'border-primary-500'
							: 'border-surface-300 hover:border-surface-400'}"
					>
						<img
							src="/uploads/{wall.photo.file_path}"
							alt={wall.name}
							class="w-full h-full object-cover"
						/>
					</button>
				{/each}
			</div>
		{/if}
	</div>
{:else}
	<div class="text-center py-12">
		<p class="text-surface-500 text-lg">Aucun mur disponible</p>
		<a href="/pan/gym/{id}/walls/new" class="btn variant-filled-primary">Ajouter un mur</a>
	</div>
{/if}

<style>
	/* Smooth transitions */
	img {
		transition: opacity 0.3s ease-in-out;
	}
</style>
