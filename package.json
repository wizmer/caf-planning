{
	"name": "caf-planning",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"deploy": "npm run build && gsutil -m cp -R build/* gs://caf-planning-staticfiles",
		"psql": "PGPASSWORD=postgres psql -U bcoste --host 127.0.0.1 --port 5432 -d caf",
		"prisma:migrate:dev": "DATABASE_URL=\"postgresql://bcoste:postgres@127.0.0.1:5432/caf\" npx prisma migrate dev",
		"prisma:migrate:baseline:create": "DATABASE_URL=\"postgresql://bcoste:postgres@127.0.0.1:5432/caf\" npx prisma migrate dev --create-only --name init_baseline"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.5.3",
		"@iconify/svelte": "^3.1.6",
		"@skeletonlabs/skeleton": "^2.6.1",
		"@skeletonlabs/tw-plugin": "^0.3.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^2.0.2",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/google.maps": "^3.54.10",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.32",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelty-picker": "^5.2.1",
		"tailwindcss": "^3.4.0",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.0",
		"vite-plugin-tailwind-purgecss": "^0.2.0",
		"vitest": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"@prisma/client": "^6.19.0",
		"flowbite": "^2.2.1",
		"flowbite-svelte": "^0.44.22",
		"luxon": "^3.4.4",
		"postgresql-client": "^2.10.5",
		"prisma": "^6.19.0",
		"tailwind-merge": "^2.2.0"
	}
}
